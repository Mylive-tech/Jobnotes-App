<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5e1f1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_report_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/back_arrow"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:textColor="#f8f8f8"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/sc_report_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d5e1f1"
        android:fillViewport="false">

        <LinearLayout
            android:id="@+id/ll_report_scroll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d5e1f1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_report_location_property_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#f8f8f8"
                android:gravity="left|center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="30dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="50dp"
                    android:paddingTop="30dp"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/location_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_report_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/location"
                            android:textColor="#46505c"
                            android:textSize="15sp" />

                        <Spinner
                            android:id="@+id/sp_report_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background">

                        </Spinner>
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d5e1f1">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="30dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="50dp"
                    android:paddingTop="30dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@mipmap/home_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_report_property"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/property"
                            android:textColor="#46505c"
                            android:textSize="15sp" />

                        <Spinner

                            android:id="@+id/sp_report_property"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background">

                        </Spinner>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_report_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"

                android:gravity="left|center_vertical"

                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_report_submit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left|center_vertical"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>